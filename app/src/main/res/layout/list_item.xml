<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="20dp"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:background="#ffffff"
    android:paddingRight="4dp"
    android:paddingTop="4dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20dp"
        android:id="@+id/JobTitle"
        android:textColor="#1273bf"
        android:text="job title"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_passed"
        android:text="2d"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/time_passed"
        android:src="@drawable/time"></ImageView>
</RelativeLayout>

            <TextView
                android:textSize="15dp"
                android:id="@+id/Employer"
                android:text="employer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/experience"></ImageView>
                <TextView
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/experience"
                    android:text="experience"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/map"></ImageView>

                <TextView
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/location"
                    android:text="location"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/skills"
                    android:id="@+id/skills_image"></ImageView>
                <TextView
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/skills_image"
                    android:id="@+id/skills"
                    android:text="skills"
                    android:paddingBottom="5dp" />
                <TextView
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_shape"
                    android:text="Apply Now"
                    android:textColor="#ffffff"
                    android:padding="5dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:id="@+id/divider"
                android:background="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                ></View>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>