<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="20dp"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:background="#ffffff"
    android:paddingRight="4dp"
    android:paddingTop="4dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:minHeight="50dp"
        android:background="@drawable/background_with_shadow"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="20dp"
        android:id="@+id/event_title_text"
        android:textColor="#1273bf"
        android:text="Event name"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

            <TextView
                android:textSize="15dp"
                android:id="@+id/event_description_text"
                android:text="description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/time"></ImageView>
                <TextView
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_time_text"
                    android:text="June 22, 2016"
                    android:paddingBottom="10dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/map"
                    android:layout_marginRight="7dp"
                    android:id="@+id/event_map_image"></ImageView>
                <TextView
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/event_map_image"
                    android:id="@+id/event_venue_text"
                    android:text="Gachibowli, Hyderabad"
                    android:paddingBottom="10dp" />
                <TextView
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_rect_shape"
                    android:text="More"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>